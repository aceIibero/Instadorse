<div class="row g-4">
    
    {{#each profiles}}
<div class="col-md-3">
    <div class="card h-100 shadow-sm">
        <div class="card-body pt-3">
            <div class="d-flex align-items-center mb-3">
                <div class="overflow-hidden rounded-circle me-3" style="width: 80px; height: 80px;">
                    <img src="https://placehold.co/100x100" alt="{{name}}" class="w-100 h-100 object-fit-cover">
                </div>
                <div>
                    <h4 class="card-title fw-bold mb-0">{{name}}</h4>
                    <p class="mt-1 card-subtitle text-muted mb-0">@{{username}}</p>
                    <p class="mt-1 card-subtitle text-muted mb-0"><i class="fas fa-users me-1"></i> {{followerCount}} Followers</p>
                </div>
            </div>

            <div class="mb-2">
                {{#each categories}}
                    <span class="badge bg-{{color}} me-1">{{name}}</span>
                {{/each}}
            </div>

            <div class="mt-3 d-flex justify-content-between align-items-center">
                <div>
                    <small class="text-muted d-block mb-1">Starting from</small>
                    <div class="text-dark fw-bold">Rp {{startingPrice}}</div>
                </div>
                <a href="/profile" class="btn btn-primary btn-sm">View Profile</a>
            </div>
        </div>
    </div>
</div>
    {{/each}}

</div>