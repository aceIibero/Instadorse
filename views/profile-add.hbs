<!-- Page Title -->
<div class="container mt-5">
    <h1 class="text-center display-4 fw-bold">Add Profile</h1>
</div>

<!-- Profile Creation Form -->
<div class="container mt-4 mb-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <form>
                <!-- Name -->
                <div class="mb-4">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" placeholder="Enter your name">
                </div>

                <!-- Bio -->
                <div class="mb-4">
                    <label for="bio" class="form-label">Bio</label>
                    <textarea class="form-control" id="bio" rows="3" placeholder="Tell us about yourself"></textarea>
                </div>

                <!-- Skills/Tags -->
                <div class="mb-4">
                    <label for="skills" class="form-label">Skills/Tags</label>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="skillFitness" value="Fitness">
                        <label class="form-check-label" for="skillFitness">Fitness</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="skillYoga" value="Yoga">
                        <label class="form-check-label" for="skillYoga">Yoga</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="skillNutrition" value="Nutrition">
                        <label class="form-check-label" for="skillNutrition">Nutrition</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="skillPersonalTraining" value="Personal Training">
                        <label class="form-check-label" for="skillPersonalTraining">Personal Training</label>
                    </div>
                </div>

                <!-- Pricing -->
                <div class="mb-4">
                    <label for="pricing" class="form-label">Starting Price</label>
                    <input type="number" class="form-control" id="pricing" placeholder="Enter your starting price">
                </div>

                <!-- Website URL -->
                <div class="mb-4">
                    <label for="website" class="form-label">Website (Optional)</label>
                    <input type="url" class="form-control" id="website" placeholder="Enter your website URL">
                </div>

                <!-- Location -->
                <div class="mb-4">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" class="form-control" id="location" placeholder="Enter your location">
                </div>

                <!-- Submit Button -->
                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg">Create Profile</button>
                    <a href="/profiles" class="btn btn-warning btn-lg">Cencel</a>
                </div>

                <div class="text-center">
                </div>
            </form>
        </div>
    </div>
</div>